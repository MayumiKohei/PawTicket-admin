{
  "functions": [
    {
      "source": "functions",
      "codebase": "api",
      "runtime": "nodejs20",
      "region": "us-central1",
      "memory": "512MiB",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local",
        ".env*"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api",
        "region": "us-central1"
      },
      {
        "source": "**",
        "run": { "serviceId": "nextjsfunc", "region": "us-central1" }
      }
    ]
  }
}
