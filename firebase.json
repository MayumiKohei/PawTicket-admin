{
	"functions": [
		{
			"source": "functions",
			"codebase": "api",
			"runtime": "nodejs20",
			"region": "us-central1",
			"memory": "512MiB",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local",
				".env*"
			]
		}
	],
	"hosting": {
		"source": ".",
		"rewrites": [
			{
				"source": "/api/announcements",
				"function": "api",
				"region": "us-central1"
			},
			{
				"source": "/api/announcements/**",
				"function": "api",
				"region": "us-central1"
			}
		]
	}
}
