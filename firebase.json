{
  "functions": {
    "source": "functions",
    "platform": "gcfv2",
    "runtime": "nodejs20",
    "region": "us-central1",
    "dockerRegistry": "ARTIFACT_REGISTRY",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "nextjsfunc",
          "region": "us-central1"
        }
      }
    ]
  }
}
